# Podcast Generation Configuration
# Copy this file to podcast.yaml and customize.

# Language for generated podcast
language: "en"  # "en" for English, "pl" for Polish

# Voice configuration
voices:
  # Built-in XTTS speakers
  host_speaker: "Damien Black"       # Male voice
  co_host_speaker: "Claribel Dervla" # Female voice

  # Custom voice samples (uncomment and set paths for voice cloning)
  # host_voice_sample: "voices/host.wav"
  # co_host_voice_sample: "voices/cohost.wav"

# Output settings
output_dir: "output/podcasts"
